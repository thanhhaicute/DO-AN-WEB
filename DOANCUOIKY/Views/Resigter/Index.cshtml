
@{
    ViewBag.Title = "Đăng ký tài khoản";
    Layout = "~/Views/Shared/_Main.cshtml";
}

<div class="container text-center" style="height:60vh">
    <div class="row ">
        <div class="col-8 d-flex flex-column align-items-center mt-4">
            <h3 class="mt-4 ">ĐĂNG KÝ THÀNH VIÊN</h3>

            <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon1">Họ và tên</span>
                <input type="text" class="form-control" placeholder="Nhập tên đầy đủ của bạn" aria-label="Username" aria-describedby="basic-addon1">
            </div>

            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="Nhập email của bạn" aria-label="Recipient's username" aria-describedby="basic-addon2">
                <span class="input-group-text" id="basic-addon2">Email</span>
            </div>

            <label for="basic-url" class="form-label">THÔNG TIN TÀI KHOẢN</label>

            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="Nhập tài khoản" aria-label="Username">
                <span class="input-group-text"></span>
                <input type="text" class="form-control" placeholder="Nhập mật khẩu" aria-label="Server">
            </div>

            <label for="basic-url" class="form-label">THÔNG TIN LIÊN LẬC</label>

            <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon3">Nhập số điện thoại</span>
                <input type="text" class="form-control" id="basic-url" aria-describedby="basic-addon3">
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon3">Nhập địa chỉ</span>
                <input type="text" class="form-control" id="basic-url" aria-describedby="basic-addon3">
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon3">Nhập ngày sinh</span>
                <input type="text" class="form-control" id="basic-url" aria-describedby="basic-addon3">
            </div>
            <button type="button" class="btn btn-secondary w-100">Đăng ký</button>


        </div>
        <div class="col-4 mt-4">
            <h3 class="mt-4 ">NẾU ĐÃ CÓ TÀI KHOẢN</h3>
            <a href="~/Login/Index" class="btn btn-secondary w-100">Đăng nhập</a>
        </div>
    </div>
</div>